module derelict.glu.glu;

public
{
    import derelict.glu.types;
    import derelict.glu.functions;
}

private
{
    import derelict.util.loader;
    import derelict.util.system;

    static if(Derelict_OS_Windows)
        enum libNames = "glu32.dll";
    //else static if(Derelict_OS_Mac)
    //    enum libNames = " ";
    else static if(Derelict_OS_Posix)
        enum libNames = "libGLU.so.1";
    else
        static assert(0, "Need to implement GLU libNames for this operating system.");
}

class DerelictGLULoader : SharedLibLoader
{
    protected
    {
        override void loadSymbols()
        {
            bindFunc(cast(void**)&gluPerspective, "gluPerspective");
			bindFunc(cast(void**)&gluLookAt, "gluLookAt");
        }
    }

    public
    {
        this()
        {
            super(libNames);
        }
    }
}

__gshared DerelictGLULoader DerelictGLU;

shared static this()
{
    DerelictGLU = new DerelictGLULoader();
}

shared static ~this()
{
    if(SharedLibLoader.isAutoUnloadEnabled())
        DerelictGLU.unload();
}
